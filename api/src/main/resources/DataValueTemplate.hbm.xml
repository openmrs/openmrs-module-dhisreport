<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="org.openmrs.module.dhisreport.api.model">
    <class name="DataValueTemplate" table="${project.parent.artifactId}_data_value_template">
        <id column="data_value_template_id" name="id" unsaved-value="0">
            <generator class="native"/>
        </id>
        <discriminator column="data_value_template_id" insert="false"/>
        <property column="uuid" name="uuid"/>
        <many-to-one name="dataElement" column="data_element_id" not-null="true"/>
        <many-to-one name="dataSet" column="dataset_id" not-null="true"/>
        <property name="reportIndicatorLabel" column="report_indicator_label"/>
        <set name="disaggregations" table="${project.parent.artifactId}_disaggregation_data_value_template"
          lazy="true" fetch="select" cascade="all">
            <key>
                <column name="data_value_template_id" not-null="true"/>
            </key>
            <many-to-many class="Disaggregation">
                <column name="disaggregation_id" not-null="true"/>
            </many-to-many>
        </set>
    </class>
</hibernate-mapping>
